@model IEnumerable<Z_ERP.Models.pur_BillDetails>
    @{
        
    }

<style>
    .modal-dialog {
        width: 75%;
    }
</style>
<div class="col-md-12">
    <div class="box box-success box-solid">
        <div class="box-header with-border">
            <h4 class="box-title">بيانات الفاتورة</h4>
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" type="button" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>

            <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="tblCartItems" class="table table-bordered table-striped" cellpadding="0" cellspacing="0">
                <tr>
                    <th style="width:10%"> رقم الفاتورة</th>
                    <th style="width:15%">المبلغ</th>
                    <th style="width:5%">نوع الدفع</th>
                    <th style="width:15%">رقم الشيك</th>
                    <th style="width:15%">الفرع</th>
                    <th style="width:15%">تاريخ الشيك</th>
                    
                    <th style="width:15%">تاريخ المعاملة</th>
                    
                 
                </tr>
                @foreach (var cartItems in Model)
                {
                    <tr>
                        <td class="BillNo" >
                            <span>@cartItems.BillNo</span>
                        </td>

                        <td class="ItemID" >
                            <span >@cartItems.Amount</span>
                        </td>
                        <td>
                            <span>
                                @{
                                if (cartItems.PaymentMethodID == 1)
                                {
                                    <span>كاش</span>
                                }
                                else

                                {
                                    <span>بنك</span>
                                }
                            }
                        </span>
                    </td>
                        @{
                            if (cartItems.PaymentMethodID == 2)
                            {

                        <td class="ItemName">
                            <span id="ItemNameSpan">@cartItems.ChequeNo</span>
                        </td>
                        <td class="ItemName">
                            <span id="ItemNameSpan">@cartItems.ChequeBank</span>
                        </td>
                        <td class="ItemName">
                            <span id="ItemNameSpan">@cartItems.ChequeDate</span>
                        </td>
                            }
                            else
                            {
                                <td class="ItemName">
                                    <span id="ItemNameSpan">-</span>
                                </td>
                                <td class="ItemName">
                                    <span id="ItemNameSpan">-</span>
                                </td>
                                <td class="ItemName">
                                    <span id="ItemNameSpan">-</span>
                                </td>
                                }
                            }
                       
                        <td class="ItemSellPrice">
                            <span class="changeThis">@cartItems.BillDetailsDate</span>
                        </td>
                        @*<td>
                            <span>
                                @{
                                    if (cartItems.PaymentMethodID == 2)
                                    {
                                        <button type="button" id="btnAddInvintory" class="btn btn-success btnAddInvintory">بيانات الشيك </button>
                                    }
                                    
                            }
                        </span>
                    </td>*@
                    </tr>
    }

            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>