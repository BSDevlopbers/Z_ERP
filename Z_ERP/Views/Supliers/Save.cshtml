@model Z_ERP.Models.pur_Supliers
@{
    ViewBag.Title = "Create";
    Layout = null;
}
@using (Html.BeginForm("Save", "Supliers", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.AntiForgeryToken()
    if (Model != null && Model.SuplierID > 0)
    {
        @Html.HiddenFor(a => a.SuplierID, new { id = "ItemID" })
    }
    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-lg-12">
            <label> الاسم</label>
            @Html.EditorFor(model => model.SuplierName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SuplierName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-lg-12">
            <label> رقم الهاتف</label>
            @Html.EditorFor(model => model.SuplierPhone, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } } )
            @Html.ValidationMessageFor(model => model.SuplierPhone, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-lg-12">
            <label>رقم الحساب</label>
            @Html.EditorFor(model => model.SuplierBankAcount ,new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SuplierBankAcount, "", new { @class = "text-danger" })
        </div>
        
    </div>
    <div class="clearfix"></div>
}