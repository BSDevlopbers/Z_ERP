@model Z_ERP.Models.hr_Expenses

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ExpensesID)
            <div class="form-group col-md-6">
                <label>المبلغ</label>

                @Html.EditorFor(model => model.ExpensesAmount, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-md-6">
                <label>الوصف</label>
                @Html.EditorFor(model => model.ExpensesDescription, new { htmlAttributes = new { @class = "form-control" } })
            </div>
           
            
        <div class="clearfix"></div>    
    }
    
    
</body>
</html>
