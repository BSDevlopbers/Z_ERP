@model Z_ERP.Models.trc_Trucks

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <div class="col-lg-12" id="DivError">
        <label class="alert-error" > </label>
    </div>

   @using (Html.BeginForm("Save", "Trucks", FormMethod.Post, new { id = "popupForm" }))
   {
        @Html.AntiForgeryToken()

       if (Model != null && Model.TruckID > 0)
       {


        @Html.HiddenFor(a => a.TruckID , new { id = "ItemID" })
       }

    <div class="form-group col-lg-6" id="TruckName">

        <label> الاسم</label>
        @Html.EditorFor(model => model.TruckNameAr, new { htmlAttributes = new { @class = "form-control" , id= "TruckNameTxt" } })

        @Html.ValidationMessageFor(model => model.TruckNameAr, "", new { @class = "text-danger" })

    </div>

    <div class="form-group col-lg-6" id="TruckNumber">

        <label> رقم اللوحة</label>
        @Html.EditorFor(model => model.TruckNumber, new { htmlAttributes = new { @class = "form-control" , id= "TruckNumberTxt" } })

        @Html.ValidationMessageFor(model => model.TruckNumber, "", new { @class = "text-danger" })

    </div>

    <div class="form-group col-lg-6">
          <label>  سائق المركبة</label>

        @Html.DropDownList("DriverName", ViewBag.DriverDropDownList as SelectList, "- اختر السائق-", htmlAttributes: new { id = "DriversList", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.DriverName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group col-lg-6">
        <label>   مساعد السائق</label>

        @Html.DropDownList("DriverAssistant", ViewBag.DriverAssistantDropDownList as SelectList, "- اختر المساعد-", htmlAttributes: new { id = "AssistantList", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.DriverName, "", new { @class = "text-danger" })
    </div>



    <div class="clearfix"></div>


   }
    
    

</body>
</html>
