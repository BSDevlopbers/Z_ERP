@model Z_ERP.Models.UserLogin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <title>تسجيل الدخول | Login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />
    <!-- Bootstrap 3.3.4 -->
    <link rel="stylesheet" href="~/resources/bootstrap/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/resources/dist/css/AdminLTE.min.css" />
    <!-- iCheck -->
    <link rel="stylesheet" href="~/resources/plugins/iCheck/square/blue.css" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <style>
        body {
           background-image: url('../../resources/dist/img/2.png');
           background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
            height: auto;
            font-family:  'WYekan','Helvetica Neue','Helvetica','Atahoma';
        }
    </style>
</head>
<body>
   
    
    
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()


        <div class="login-logo" style="width:100%">
            <a href="#">
                <h1 style="font-family:'Arabic Typesetting';font-size:55px;color:white"> محمد ود معوض للتجارة و الاستثمار</h1>
                <h1 style="font-family:'Arabic Typesetting';font-size:55px;color:white">نظام إدارة المخازن</h1>
            </a>
        </div><!-- /.login-logo -->
        <div class="login-box" style="margin: 4% auto;direction:rtl !important">
            
            <div class="login-box-body">
                @*<p class="login-box-msg">Sign in to start your session</p>*@

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group has-feedback">
                    <label> اسم المستدخم</label>
            
                   
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <label>كلمة المرور</label>
                   
                   
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>

                </div>
                <input type="submit" value="تسجيل دخول"  style="background:#00A65A;border-color:#00A65A" class="btn btn-primary btn-block btn-flat" />
            </div>

        </div><!-- /.login-box-body -->


    }
    
  
    <!-- jQuery 2.1.4 -->
    <script src="~/resources/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.4 -->
    <script src="~/resources/bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/resources/plugins/iCheck/icheck.min.js"></script>
    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });
    </script>
   
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>



</html>
