@model Z_ERP.Models.sal_Customer
@{
    ViewBag.Title = "Create";
    Layout = null;
}



@using (Html.BeginForm("Save", "Customer", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.AntiForgeryToken()

    if (Model != null && Model.CustomerID > 0)
    {


        @Html.HiddenFor(a => a.CustomerID, new { id = "ItemID" })
    }

    <div>

        <div class="col-lg-12" id="DivError" style="margin-bottom:10px;padding:10px">
            <label class="alert-error"> </label>
        </div>
 
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-lg-12" id="customerName"> 

            <label> الاسم</label>
            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" , id= "customerNameTxt" } })

            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })

        </div>

        <div class="form-group col-lg-12" id="customerPhone">
            <label> رقم الهاتف</label>
            @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "form-control" , id= "customerPhoneTxt",type="number" } })
            @Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })

        </div>

        <div class="form-group col-lg-12">
            <label> رقم الحساب</label>
            @Html.EditorFor(model => model.CustomerBankAcount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CustomerBankAcount, "", new { @class = "text-danger" })

        </div>


        <div class="clearfix"></div>
    </div>

 

}
