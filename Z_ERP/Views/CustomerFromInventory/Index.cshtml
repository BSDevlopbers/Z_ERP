                    var selectedItem = $('#ItemsList').children("option:selected").text();
                    $("#txtItemName").val(selectedItem);

                    $("#txtItemID").val(selectedVaule);


                    $('#modal-default').modal('show');
                }




            });
            // Show new item modal event


            $('body').on('click', '#edit', function (event) {

