                $('#ItemsList').select2({

                    allowClear: true
                });

                $('#CustomersList').select2({

                   // allowClear: true
                });
                
            // Select 2 script






            // Show new item modal event
            $("#ItemsList").change(function () {


                var selectedVaule = $('#ItemsList').children("option:selected").val();
